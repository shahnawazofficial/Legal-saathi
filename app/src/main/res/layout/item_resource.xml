<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Icon and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                android:backgroundTint="#E8F5E9">

                <ImageView
                    android:id="@+id/resource_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_gavel"
                    app:tint="#4CAF50" />
            </androidx.cardview.widget.CardView>

            <!-- Title and Category -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/resource_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NALSA"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/resource_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Government"
                    android:textColor="#4CAF50"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Bookmark Button -->
            <ImageButton
                android:id="@+id/bookmark_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_bookmark_border"
                app:tint="#CCCCCC" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/resource_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="2dp"
            android:text="National Legal Services Authority provides free legal aid to eligible citizens."
            android:textColor="#666666"
            android:textSize="14sp" />

        <!-- Contact Info (Phone/Website) -->
        <LinearLayout
            android:id="@+id/contact_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Phone Number -->
            <LinearLayout
                android:id="@+id/phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_phone"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/resource_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="1800-XXX-XXXX"
                    android:textColor="#666666"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Website -->
            <LinearLayout
                android:id="@+id/website_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_web"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/resource_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="nalsa.gov.in"
                    android:textColor="#2196F3"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:orientation="horizontal">

            <!-- Call Button -->
            <Button
                android:id="@+id/call_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="4dp"
                android:text="Call"
                android:textColor="#4CAF50"
                android:visibility="gone"
                app:iconTint="#4CAF50" />

            <!-- Visit Website Button -->
            <Button
                android:id="@+id/visit_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:drawableLeft="@drawable/ic_web"
                android:drawablePadding="4dp"
                android:text="Visit"
                android:textColor="#2196F3"
                app:iconTint="#2196F3" />

            <!-- Share Button -->
            <Button
                android:id="@+id/share_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:drawableLeft="@drawable/ic_share"
                android:drawablePadding="4dp"
                android:text="Share"
                android:textColor="#666666"
                app:iconTint="#666666" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>